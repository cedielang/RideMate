<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.PassengerMapDashboard"
             Title="Find a Ride"
             Shell.NavBarIsVisible="False">
    
    <Grid>
        <!-- Map Area -->
        <WebView x:Name="MapWebView" 
                 HeightRequest="500"
                 VerticalOptions="Start"/>
        
        <!-- Bottom Sheet for Search -->
        <Border VerticalOptions="End"
                Background="White"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Padding="20"
                Margin="0">
            
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                
                <!-- Header -->
                <Label Text="Find a Ride"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#333"
                       Grid.Row="0"
                       Margin="0,0,0,15"/>
                
                <!-- Destination Input -->
                <VerticalStackLayout Grid.Row="1" Spacing="5" Margin="0,0,0,10">
                    <Label Text="ðŸŽ¯ Where do you want to go?"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#666"/>
                    <Entry x:Name="DestinationEntry"
                           Placeholder="Enter destination (e.g., SM Manila)"
                           BackgroundColor="White"
                           TextColor="#333"/>
                </VerticalStackLayout>
                
                <!-- Find Drivers Button -->
                <Button Text="Find Drivers"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="16"
                        FontAttributes="Bold"
                        Grid.Row="2"
                        Margin="0,10,0,10"
                        Clicked="OnFindDriversClicked"/>
                
                <!-- Available Drivers List -->
                <ScrollView Grid.Row="3" MaximumHeightRequest="200" Margin="0,10,0,10">
                    <VerticalStackLayout x:Name="DriversListContainer" Spacing="10">
                        <!-- Drivers will be added here -->
                    </VerticalStackLayout>
                </ScrollView>
                
                <!-- Back Button -->
                <Button Text="Back to Dashboard"
                        BackgroundColor="#757575"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="4"
                        Clicked="OnBackClicked"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
