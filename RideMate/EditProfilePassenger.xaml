<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.EditProfilePassenger"
             Shell.NavBarIsVisible="False"
             Title="Edit Profile">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <Label Text="Update Your Details" FontSize="28" FontAttributes="Bold" TextColor="#4CAF50" HorizontalOptions="Center" Margin="0,10,0,0" />

            <!-- Profile Fields -->
            <Label Text="FullName:" FontSize="14" FontAttributes="Bold" />
            <Entry x:Name="NameEntry" 
                   Placeholder="Full Name" 
                   Text="{Binding Name}"
                   Keyboard="Text" />

            <Label Text="Email:" FontSize="14" FontAttributes="Bold" />
            <Entry x:Name="EmailEntry" 
                   Placeholder="Email Address" 
                   Text="{Binding Email}"
                   Keyboard="Email" />

            <!-- Save Button -->
            <Button Text="Save" 
                    x:Name="SaveButton"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50" 
                    TextColor="White" 
                    CornerRadius="10" 
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>