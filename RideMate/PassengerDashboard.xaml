<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.PassengerDashboard"
             Title="Passenger Dashboard"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="350,*">
        
        <!-- Map Section -->
        <WebView x:Name="MapWebView" 
                 Grid.Row="0"/>
        
        <!-- Bottom Content -->
        <ScrollView Grid.Row="1" BackgroundColor="#F9F9F9">
            <VerticalStackLayout Spacing="15" Padding="20">
                
                <!-- Search Panel -->
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="15"
                        Margin="0,-10,0,0"
                        BackgroundColor="White">
                    <VerticalStackLayout Spacing="15">
                        
                        <!-- Vehicle Type Selection -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                            <Label Text="4-seater" FontSize="12" TextColor="#007AFF"/>
                            <Label Text="6-seater" FontSize="12" TextColor="#333"/>
                            <Label Text="Taxi" FontSize="12" TextColor="#333"/>
                        </HorizontalStackLayout>
                        
                        <!-- Destination Entry -->
                        <Entry x:Name="DestinationEntry"
                               Placeholder="Where to and for how much?"
                               FontSize="16"
                               HeightRequest="50"
                               BackgroundColor="#F0F0F0"/>
                        
                        <!-- Book Ride Button -->
                        <Button Text="Book a Ride"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Clicked="OnBookRideClicked"/>
                        
                    </VerticalStackLayout>
                </Border>
                
                <!-- Recent Activity -->
                <Border Stroke="#E9ECEF"
                        Background="White"
                        StrokeShape="RoundRectangle 10"
                        Padding="15"
                        Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Recent Activity"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label Text="No recent trips found."
                               FontSize="14"
                               TextColor="#666"
                               HorizontalOptions="Center"
                               Margin="0,10" />
                    </VerticalStackLayout>
                </Border>
                
                <!-- Menu Buttons -->
                <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                                        
                    
                    <Button Text="ðŸ‘¤ Edit Profile"
                            BackgroundColor="White"
                            TextColor="#333"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="50"
                            Clicked="OnEditProfileClicked"/>
                    
                    <Button Text="ðŸšª Logout"
                            BackgroundColor="White"
                            TextColor="#DC3545"
                            BorderColor="#DC3545"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="50"
                            Clicked="OnLogoutClicked"/>
                    
                </VerticalStackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
    
</ContentPage>
