<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.ForgotPasswordPage"
             Title="Forgot Password"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    
    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="40,60,40,40">
            
            <!-- Header -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Reset Password"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center" />
                
                <Label Text="Enter your phone number to reset password"
                       FontSize="16"
                       TextColor="#666"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Phone Number Input -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Phone Number"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333" />
                
                <Frame BackgroundColor="White"
                       BorderColor="#E0E0E0"
                       CornerRadius="10"
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="PhoneEntry"
                           Placeholder="09123456789"
                           PlaceholderColor="#999"
                           TextColor="#333"
                           FontSize="16"
                           Keyboard="Telephone"
                           BackgroundColor="Transparent"
                           Margin="15,10" />
                </Frame>
            </VerticalStackLayout>

            <!-- New Password Input -->
            <VerticalStackLayout Spacing="15">
                <Label Text="New Password"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333" />
                
                <Frame BackgroundColor="White"
                       BorderColor="#E0E0E0"
                       CornerRadius="10"
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="NewPasswordEntry"
                           Placeholder="Enter new password"
                           PlaceholderColor="#999"
                           TextColor="#333"
                           FontSize="16"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           Margin="15,10" />
                </Frame>
            </VerticalStackLayout>

            <!-- Confirm Password Input -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Confirm Password"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333" />
                
                <Frame BackgroundColor="White"
                       BorderColor="#E0E0E0"
                       CornerRadius="10"
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm new password"
                           PlaceholderColor="#999"
                           TextColor="#333"
                           FontSize="16"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           Margin="15,10" />
                </Frame>
            </VerticalStackLayout>

            <!-- Reset Button -->
            <Button x:Name="ResetButton"
                    Text="Reset Password"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnResetPasswordClicked" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="#007AFF" />

            <!-- Status Label -->
            <Label x:Name="StatusLabel"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Back to Login -->
            <Button Text="â† Back to Login"
                    BackgroundColor="Transparent"
                    TextColor="#666"
                    FontSize="16"
                    Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
