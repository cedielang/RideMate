<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.RatingPage"
             Title="Rate Your Driver"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Success Header -->
            <Border BackgroundColor="#4CAF50"
                    Padding="20"
                    StrokeShape="RoundRectangle 15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="âœ“"
                           FontSize="50"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Trip Completed!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Thank you for riding with us"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Trip Summary -->
            <Border BackgroundColor="#F5F5F5"
                    Padding="20"
                    StrokeShape="RoundRectangle 12">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Driver"
                           FontSize="14"
                           TextColor="#666"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           x:Name="DriverNameLabel"
                           Text="Driver Name"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Total Fare"
                           FontSize="14"
                           TextColor="#666"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           x:Name="FareLabel"
                           Text="â‚±150.00"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#F57C00"/>
                    
                    <Label Grid.Row="2" Grid.Column="0"
                           Text="Payment"
                           FontSize="14"
                           TextColor="#666"/>
                    <Label Grid.Row="2" Grid.Column="1"
                           x:Name="PaymentMethodLabel"
                           Text="Paid via GCash"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"/>
                </Grid>
            </Border>

            <!-- Rating Section -->
            <VerticalStackLayout Spacing="15">
                <Label Text="How was your ride?"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"/>
                
                <!-- Star Rating -->
                <HorizontalStackLayout Spacing="10"
                                      HorizontalOptions="Center">
                    <Label x:Name="Star1"
                           Text="â˜†"
                           FontSize="50"
                           TextColor="#FFC107">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStar1Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="Star2"
                           Text="â˜†"
                           FontSize="50"
                           TextColor="#FFC107">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStar2Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="Star3"
                           Text="â˜†"
                           FontSize="50"
                           TextColor="#FFC107">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStar3Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="Star4"
                           Text="â˜†"
                           FontSize="50"
                           TextColor="#FFC107">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStar4Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="Star5"
                           Text="â˜†"
                           FontSize="50"
                           TextColor="#FFC107">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStar5Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
                
                <Label x:Name="RatingTextLabel"
                       Text="Tap to rate"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#666"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Quick Feedback -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Quick Feedback (Optional)"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                    <Button x:Name="FriendlyButton"
                            Grid.Row="0" Grid.Column="0"
                            Text="ðŸ˜Š Friendly"
                            BackgroundColor="White"
                            TextColor="#666"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            CornerRadius="8"
                            Clicked="OnFriendlyClicked"/>
                    
                    <Button x:Name="SafeButton"
                            Grid.Row="0" Grid.Column="1"
                            Text="ðŸ›¡ï¸ Safe Driver"
                            BackgroundColor="White"
                            TextColor="#666"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            CornerRadius="8"
                            Clicked="OnSafeClicked"/>
                    
                    <Button x:Name="CleanButton"
                            Grid.Row="1" Grid.Column="0"
                            Text="âœ¨ Clean Car"
                            BackgroundColor="White"
                            TextColor="#666"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            CornerRadius="8"
                            Clicked="OnCleanClicked"/>
                    
                    <Button x:Name="PunctualButton"
                            Grid.Row="1" Grid.Column="1"
                            Text="â° Punctual"
                            BackgroundColor="White"
                            TextColor="#666"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            CornerRadius="8"
                            Clicked="OnPunctualClicked"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Comment -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Additional Comments (Optional)"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                
                <Border BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="10">
                    <Editor x:Name="CommentEditor"
                            Placeholder="Share your experience..."
                            HeightRequest="100"
                            FontSize="14"/>
                </Border>
            </VerticalStackLayout>

            <!-- Submit Button -->
            <Button x:Name="SubmitButton"
                    Text="Submit Rating"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="55"
                    Clicked="OnSubmitRatingClicked"/>

            <!-- Skip Button -->
            <Button Text="Skip for Now"
                    BackgroundColor="Transparent"
                    TextColor="#666"
                    FontSize="14"
                    Clicked="OnSkipClicked"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
