<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.OtpVerification"
             Title="Verify OTP"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="40,60,40,40">

            <!-- Header -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Verify Your Phone"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center" />

                <Label x:Name="PhoneLabel"
                       Text="Code sent to your phone"
                       FontSize="16"
                       TextColor="#666"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- OTP Input Section -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Enter Verification Code"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333" />

               
                    <Entry x:Name="OtpEntry"
                           Placeholder="Enter 6-digit code"
                           PlaceholderColor="#999"
                           TextColor="#333"
                           FontSize="18"
                           Keyboard="Numeric"
                           MaxLength="6"
                           BackgroundColor="Transparent"
                           HorizontalTextAlignment="Center"
                           Margin="15,10" />
                
            </VerticalStackLayout>

            <!-- Verify Button -->
            <Button x:Name="VerifyButton"
                    Text="Verify Code"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnVerifyClicked" />

            <!-- Resend Section -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Didn't receive the code?"
                       FontSize="14"
                       TextColor="#666"
                       HorizontalOptions="Center" />

                <Button x:Name="ResendButton"
                        Text="Resend Code"
                        BackgroundColor="Transparent"
                        TextColor="#007AFF"
                        FontSize="16"
                        Clicked="OnResendClicked" />
            </VerticalStackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="#007AFF" />

            <!-- Status Label -->
            <Label x:Name="StatusLabel"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>