<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideMate.MainPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Image Source="backgroundimage.jpg"
           Aspect="AspectFill"
           VerticalOptions="Fill"
           HorizontalOptions="Fill" />
        <ScrollView>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="40" Padding="20">
                <Image Source="ridematelogo.png"
        Grid.Row="0"
        WidthRequest="350"
        HeightRequest="350" 
        HorizontalOptions="Center"  
        VerticalOptions="Center"
        Aspect="AspectFit"/>

                <Button Text="Get Started"
         BackgroundColor="#007AFF"
         TextColor="White"
         Grid.Row="1"
         CornerRadius="25"
         WidthRequest="250"
         HeightRequest="50"
         FontSize="18"
         FontAttributes="Bold"
         VerticalOptions="End"
         HorizontalOptions="Center"
         Margin="0,0,0,50"
         Clicked="OnGetStartedClicked"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
